<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="edu.uw.tcss450.inouek.test450.ui.home.HomeFragment"
        android:label="menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_connections"
            app:destination="@id/nav_connections" />
        <action
            android:id="@+id/action_home_to_chatlist"
            app:destination="@id/nav_chatlist"/>
    </fragment>
    <activity
        android:id="@+id/nav_connections"
        android:name="edu.uw.tcss450.inouek.test450.Connections.ConnectionsActivity"
        android:label="activity_connections"
        tools:layout="@layout/activity_connections" />

    <fragment
        android:id="@+id/nav_chat"
        android:name="edu.uw.tcss450.inouek.test450.Connections.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat"/>

    <activity
        android:id="@+id/nav_weather"
        android:name="edu.uw.tcss450.inouek.test450.WeatherActivity"
        android:label="activity_weather"
        tools:layout="@layout/activity_weather" />
    <fragment
        android:id="@+id/nav_account"
        android:name="edu.uw.tcss450.inouek.test450.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" />
    <fragment
        android:id="@+id/nav_chatlist"
        android:name="edu.uw.tcss450.inouek.test450.Connections.chat.ChatListFragment"
        android:label="fragment_chat_list"
        tools:layout="@layout/fragment_chat_list">
        <action
            android:id="@+id/action_chatlist_to_chat"
            app:destination="@id/nav_chat"/>
    </fragment>


</navigation>