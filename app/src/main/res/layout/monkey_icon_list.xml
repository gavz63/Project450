<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/monkey_blue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:tag="@string/avatar_blue"
                app:srcCompat="@drawable/ic_monkey_blue" />

            <ImageView
                android:id="@+id/monkey_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_monkey_green"
                android:tag="@string/avatar_green"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/monkey_pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_monkey_pink"
                android:tag="@string/avatar_pink"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/monkey_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_monkey_red"
                android:tag="@string/avatar_red"
                android:padding="5dp"/>

            <ImageView
                android:id="@+id/monkey_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_monkey_yellow"
                android:tag="@string/avatar_yellow"
                android:padding="5dp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>